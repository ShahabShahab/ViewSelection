<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpfully_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/helpfully_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/help_a_lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help a lot"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/help_a_little"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help a little"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/not_helping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Not helping"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <TextView
        android:id="@+id/choose_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpfully_options_layout"
        android:layout_margin="5dp"
        android:text="Please choose one of these options"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone" />

</RelativeLayout>